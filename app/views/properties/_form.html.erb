<%= form_for @property do |f| %>
  <div>
    <%= f.label :label %><br />
    <%= f.text_field :label %>
  </div>

  <div>
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </div>

  <div>
    <%= f.label :city %><br />
    <%= f.text_field :city %>
  </div>

  <div>
    <%= f.label :state %><br />
    <%= f.text_field :state %>
  </div>

  <div>
    <%= f.label :zip_code %><br />
    <%= f.text_field :zip_code %>
  </div>

  <div>
    <%= f.submit "Add Property", class: "button button-primary button-submit" %>
  </div>
<% end %>